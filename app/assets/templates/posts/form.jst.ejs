<div id = "form-template">

<form>
  <h1>
  <%= (post.get('title')) ? "Edit Post" : "New Post" %>
  </h1>
  <label>
    Title
    <input type="text" name="post[title]" value="<%=post.get('title') %>">
  </label>
  <br>
  <label>
    Body
    <textarea name="post[body]" value="<%=post.get('body')%>"></textarea>
  </label> 
  <button type="submit"> <%= (post.get('title')) ? "Update " : "New " %>Post</button>
</form>
</div>